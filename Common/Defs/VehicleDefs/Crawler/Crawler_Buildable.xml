<?xml version="1.0" encoding="utf-8" ?>

<Defs>
	<Vehicles.VehicleBuildDef ParentName="VehicleWithMapBaseBuildable">
		<defName>MV_Crawler_Blueprint</defName>
		<label>crawler</label>
